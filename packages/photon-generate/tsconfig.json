{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "es2016",
    "strict": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true
  },
  "exclude": ["archive", "dist", "build", "cli", "examples", "runtime", "src/fixtures", "src/__tests__"]
}
